{
    "compilerOptions": {
        "incremental": true,
        "outDir": "./build",
        "allowJs": false,
        "target": "es6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "inlineSources": true,
        "sourceMap": true,
        "resolveJsonModule": true,

        /* Experimental Options */
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./bot/**/*",
        ".package.json"
    ],
    "exclude": [
        "./node_modules/**/*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}
